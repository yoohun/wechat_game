/**index.wxss**/
.contain{
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  left: 1rpx;
  right: 1rpx;
  bottom: 1rpx;
}
.contain .top{
  flex: 1;
  position: relative;
  background: rgb(243, 243, 243)
}
.contain .top .text{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: right;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 50rpx
}
.contain .bottom{
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between
}
.contain .bottom .item{
  width: 25%;
  display: flex;
  flex-direction: column;
  height: 100%;
  border-right: 1rpx solid rgb(201, 201, 201);
}
.contain .item .item-li{
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  border-bottom: 1rpx solid rgb(201, 201, 201);
  font-size: 32rpx
}
.contain .bottom .item .item-li2{
  height: 220rpx;
  line-height: 220rpx;
}
.contain .bottom .item .item-li:first-child{
  border-top: 1rpx solid rgb(201, 201, 201);
}
.contain .bottom .item .item-li:last-child{
  border: none
}
.contain .bottom .item:last-child{
  border-right: none
}
.color{
  color: red
}